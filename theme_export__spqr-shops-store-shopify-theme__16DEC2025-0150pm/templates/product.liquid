<script>
  // Cambiar imagen principal
  function changeImage(imageSrc, thumbnail) {
    document.getElementById('mainImage').src = imageSrc;
    document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
    thumbnail.classList.add('active');
  }

  // Seleccionar variante
  function selectVariant(variantId, element) {
    if (element.classList.contains('unavailable')) return;
    
    document.querySelectorAll('.variant-option').forEach(v => v.classList.remove('active'));
    element.classList.add('active');
    document.querySelector('input[name="id"]').value = variantId;
    
    // Actualizar precio si es necesario
    const price = element.dataset.price;
    if (price) {
      document.querySelector('.price-current').textContent = price;
    }
  }

  // Cambiar tabs
  function switchTab(index, button) {
    document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
    
    button.classList.add('active');
    document.querySelectorAll('.tab-content')[index].classList.add('active');
  }

  // A√±adir al carrito (Ajax)
  document.getElementById('product-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    
    fetch('/cart/add.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      // Actualizar contador del carrito
      fetch('/cart.js')
        .then(r => r.json())
        .then(cart => {
          document.querySelector('[data-cart-count]').textContent = cart.item_count;
          alert('‚úÖ Producto a√±adido al carrito');
        });
    })
    .catch(error => {
      console.error('Error:', error);
      alert('‚ùå Error al a√±adir al carrito');
    });
  });

  // Wishlist (requiere scripts-complete.js)
  function toggleWishlist(productId) {
    if (window.SPQRShop && window.SPQRShop.wishlist) {
      window.SPQRShop.wishlist.toggle(productId);
    } else {
      alert('‚ù§Ô∏è A√±adido a favoritos');
    }
  }
</script>