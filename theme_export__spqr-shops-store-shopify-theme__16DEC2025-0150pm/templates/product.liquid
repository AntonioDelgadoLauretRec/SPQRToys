    cursor: not-allowed;
    text-decoration: line-through;
  }

  /* === BOTONES DE ACCI√ìN === */
  .action-buttons {
    display: flex;
    gap: 15px;
    margin: 35px 0;
  }

  .btn-add-cart {
    flex: 1;
