    font-weight: 800;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 6px 20px rgba(133, 1, 1, 0.3);
  }

  .btn-add-cart:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(133, 1, 1, 0.4);
  }

  .btn-add-cart:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .btn-wishlist {
    width: 60px;
    height: 60px;
    border: 2px solid #E9C46A;
    background: white;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-wishlist:hover {
    background: #E9C46A;
    transform: scale(1.1);
  }

  /* === GARANT√çAS === */
  .guarantees {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin: 30px 0;
    padding: 25px;
    background: white;
    border: 2px dashed #E9C46A;
    border-radius: 12px;
  }

  .guarantee-item {
    text-align: center;
  }

  .guarantee-icon {
    font-size: 2rem;
    margin-bottom: 8px;
  }

  .guarantee-text {
    font-size: 0.85rem;
    font-weight: 600;
    color: #002C54;
  }

  /* === DESCRIPCI√ìN Y TABS === */
  .product-details {
    max-width: 1400px;
    margin: 60px auto;
    padding: 0 20px;
  }

  .tabs {
    display: flex;
    gap: 20px;
    border-bottom: 3px solid #E9C46A;
    margin-bottom: 30px;
  }

  .tab-button {
    padding: 15px 30px;
    background: none;
    border: none;
    font-size: 1.1rem;
    font-weight: 700;
    color: #666;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .tab-button.active {
    color: #002C54;
  }

  .tab-button.active::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 3px;
    background: #002C54;
  }

  .tab-content {
    display: none;
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    line-height: 1.8;
  }

  .tab-content.active {
    display: block;
    animation: fadeIn 0.5s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* === CROSS-SELLING === */
  .cross-sell {
    max-width: 1400px;
    margin: 60px auto;
    padding: 40px 20px;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-radius: 16px;
  }

  .cross-sell-title {
    font-family: 'Playfair Display';
    font-size: 2rem;
    color: #002C54;
    text-align: center;
    margin-bottom: 40px;
  }

  .cross-sell-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 30px;
  }

  /* === RESPONSIVE === */
  @media (max-width: 968px) {
    .product-container {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .product-gallery {
      position: static;
    }

    .product-title {
      font-size: 2rem;
    }

    .price-current {
      font-size: 2.5rem;
    }

    .action-buttons {
      flex-direction: column;
    }

    .btn-wishlist {
      width: 100%;
    }

    .tabs {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
  }
</style>

