          {% endif %}
        </button>
        <button type="button" class="btn-wishlist" onclick="toggleWishlist({{ product.id }})">
          ‚ù§Ô∏è
        </button>
      </div>
    </form>

    <!-- Garant√≠as -->
    <div class="guarantees">
      <div class="guarantee-item">
        <div class="guarantee-icon">üöö</div>
