    color: #850101;
    font-weight: 600;
    text-transform: uppercase;
  }

  .item-variant {
    font-size: 0.9rem;
    color: #666;
  }

  .item-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: #002C54;
  }

  .item-compare-price {
