<style>
  /* === CONTENEDOR DEL CARRITO === */
  .cart-page {
    max-width: 1400px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .cart-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .cart-title {
    font-family: 'Playfair Display';
    font-size: 3rem;
    color: #002C54;
    margin: 0 0 15px 0;
  }

  .cart-subtitle {
    color: #666;
    font-size: 1.1rem;
  }

  /* === LAYOUT PRINCIPAL === */
  .cart-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 40px;
    align-items: start;
  }

  /* === TABLA DE PRODUCTOS === */
