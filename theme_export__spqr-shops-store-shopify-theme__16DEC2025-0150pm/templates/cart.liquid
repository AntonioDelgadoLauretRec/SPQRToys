  }

  .guarantee-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: #002C54;
  }

  /* === BOT√ìN DE CHECKOUT === */
  .btn-checkout {
    width: 100%;
    padding: 20px;
    background: linear-gradient(135deg, #850101, #a81515);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.3rem;
    font-weight: 800;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 6px 20px rgba(133, 1, 1, 0.3);
    margin-top: 20px;
  }

  .btn-checkout:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(133, 1, 1, 0.4);
  }

  .secure-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 15px;
    font-size: 0.85rem;
    color: #666;
  }

  .btn-continue-shopping {
    width: 100%;
    padding: 15px;
    background: white;
    color: #002C54;
    border: 2px solid #002C54;
    border-radius: 8px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 15px;
    text-decoration: none;
    display: block;
    text-align: center;
  }

  .btn-continue-shopping:hover {
    background: #002C54;
    color: white;
  }

  /* === ENV√çO GRATIS === */
  .free-shipping-bar {
    background: linear-gradient(135deg, #2a9d8f, #1b7968);
    color: white;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 30px;
    text-align: center;
  }

  .shipping-progress {
    margin-top: 15px;
  }

  .progress-bar {
    height: 10px;
    background: rgba(255,255,255,0.3);
    border-radius: 10px;
    overflow: hidden;
    margin-top: 10px;
  }

  .progress-fill {
    height: 100%;
    background: white;
    transition: width 0.3s ease;
  }

  /* === CARRITO VAC√çO === */
  .empty-cart {
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .empty-icon {
    font-size: 6rem;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .empty-title {
    font-family: 'Playfair Display';
    font-size: 2.5rem;
    color: #002C54;
    margin-bottom: 15px;
  }

  .empty-text {
    color: #666;
    margin-bottom: 30px;
    font-size: 1.1rem;
  }

  /* === RECOMENDACIONES === */
  .cart-recommendations {
    margin-top: 60px;
    padding: 40px;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-radius: 16px;
  }

  .recommendations-title {
    font-family: 'Playfair Display';
    font-size: 2rem;
    color: #002C54;
    text-align: center;
    margin-bottom: 40px;
  }

  .recommendations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 30px;
  }

  /* === RESPONSIVE === */
  @media (max-width: 1024px) {
    .cart-layout {
      grid-template-columns: 1fr;
    }

    .cart-summary {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .cart-title {
      font-size: 2rem;
    }

    .cart-item {
      grid-template-columns: 80px 1fr;
      gap: 15px;
    }

    .item-image img {
      height: 80px;
    }

    .item-actions {
      grid-column: 1 / -1;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid #f0f0f0;
    }

    .total-price {
      font-size: 2rem;
    }
  }
</style>

{% if cart.item_count > 0 %}
  <div class="cart-page">
    <div class="cart-header">
      <h1 class="cart-title">üõí Tu Carrito</h1>
      <p class="cart-subtitle">{{ cart.item_count }} {% if cart.item_count == 1 %}producto{% else %}productos{% endif %} en tu carrito</p>
    </div>

    <!-- Barra de env√≠o gratis -->
    {% assign free_shipping_threshold = 4900 %}
    {% assign remaining = free_shipping_threshold | minus: cart.total_price %}
    {% if remaining > 0 %}
      <div class="free-shipping-bar">
        <strong>üöö ¬°Te faltan {{ remaining | money }} para env√≠o GRATIS!</strong>
        <div class="shipping-progress">
          <div class="progress-bar">
            <div class="progress-fill" style="width: {{ cart.total_price | times: 100 | divided_by: free_shipping_threshold }}%"></div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="free-shipping-bar">
        <strong>‚úÖ ¬°Felicidades! Tienes env√≠o GRATIS</strong>
      </div>
    {% endif %}

    <div class="cart-layout">
      <!-- === PRODUCTOS === -->
      <div class="cart-items">
        <form action="/cart" method="post" id="cart-form">
          {% for item in cart.items %}
            <div class="cart-item" data-line="{{ forloop.index }}">
              <div class="item-image">
                <a href="{{ item.url }}">
                  <img src="{{ item.image | img_url: '200x200' }}" alt="{{ item.title }}">
                </a>
              </div>

              <div class="item-details">
                <div class="item-vendor">{{ item.vendor }}</div>
                <h3 class="item-title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                {% unless item.variant.title == 'Default Title' %}
                  <div class="item-variant">{{ item.variant.title }}</div>
                {% endunless %}
                <div class="item-price">
                  {{ item.final_price | money }}
                  {% if item.original_price > item.final_price %}
                    <span class="item-compare-price">{{ item.original_price | money }}</span>
                  {% endif %}
                </div>
              </div>

              <div class="item-actions">
                <div class="quantity-selector">
                  <button type="button" class="qty-btn" onclick="updateQuantity({{ forloop.index }}, -1)">‚àí</button>
                  <input 
                    type="number" 
                    class="qty-input" 
                    name="updates[]" 
                    value="{{ item.quantity }}" 
                    min="0"
                    data-line="{{ forloop.index }}"
                    onchange="updateCart()"
                  >
                  <button type="button" class="qty-btn" onclick="updateQuantity({{ forloop.index }}, 1)">+</button>
                </div>
                <div class="item-subtotal">{{ item.final_line_price | money }}</div>
                <button type="button" class="btn-remove" onclick="removeItem({{ forloop.index }})">Eliminar</button>
              </div>
            </div>
          {% endfor %}
        </form>
      </div>

      <!-- === RESUMEN === -->
      <div class="cart-summary">
        <div class="summary-card">
          <h2 class="summary-title">Resumen del pedido</h2>

          <div class="summary-row">
            <span class="summary-label">Subtotal ({{ cart.item_count }} productos)</span>
            <span class="summary-value">{{ cart.total_price | money }}</span>
          </div>

          {% if cart.total_discount > 0 %}
            <div class="summary-row" style="color: #850101;">
              <span class="summary-label">Descuento aplicado</span>
              <span class="summary-value">-{{ cart.total_discount | money }}</span>
            </div>
          {% endif %}

          <div class="summary-row">
            <span class="summary-label">Env√≠o</span>
            <span class="summary-value">
              {% if cart.total_price >= free_shipping_threshold %}
                <strong style="color: #2a9d8f;">¬°GRATIS!</strong>
              {% else %}
                Calculado en checkout
              {% endif %}
            </span>
          </div>

          <div class="summary-divider"></div>

          <div class="summary-total">
            <span class="total-label">Total</span>
            <span class="total-price">{{ cart.total_price | money }}</span>
          </div>

          <p style="font-size: 0.85rem; color: #666; margin: 10px 0;">IVA incluido</p>

          <!-- Cup√≥n de descuento -->
          <div class="discount-section">
            <div class="discount-header" onclick="toggleDiscount()">
              <span class="discount-icon">üéüÔ∏è</span>
              <span class="discount-text">¬øTienes un cup√≥n de descuento?</span>
            </div>
            <div class="discount-form" id="discount-form">
              <div class="discount-input-group">
                <input 
                  type="text" 
                  class="discount-input" 
                  placeholder="C√ìDIGO"
                  id="discount-code"
                >
                <button type="button" class="btn-apply-discount" onclick="applyDiscount()">Aplicar</button>
              </div>
            </div>
          </div>

          <!-- Garant√≠as -->
          <div class="cart-guarantees">
            <div class="guarantee-item">
              <span class="guarantee-icon">üîí</span>
              <span class="guarantee-text">Pago 100% seguro</span>
            </div>
            <div class="guarantee-item">
              <span class="guarantee-icon">‚Ü©Ô∏è</span>
              <span class="guarantee-text">30 d√≠as de devoluci√≥n</span>
            </div>
            <div class="guarantee-item">
              <span class="guarantee-icon">‚úÖ</span>
              <span class="guarantee-text">Garant√≠a oficial</span>
            </div>
          </div>

          <!-- Bot√≥n de checkout -->
          <button type="submit" name="checkout" class="btn-checkout" onclick="goToCheckout()">
            Finalizar compra üîí
          </button>

          <div class="secure-badge">
            <span>üîí</span>
            <span>Pago seguro con SSL</span>
          </div>

          <a href="/collections/all" class="btn-continue-shopping">‚Üê Seguir comprando</a>
        </div>
      </div>
    </div>

    <!-- Recomendaciones -->
    <div class="cart-recommendations">
      <h2 class="recommendations-title">üéÅ Completa tu compra</h2>
      <div class="recommendations-grid">
        <!-- Aqu√≠ ir√≠an productos recomendados -->
        <p style="text-align: center; grid-column: 1/-1; color: #666;">Cargando recomendaciones...</p>
      </div>
    </div>
  </div>

{% else %}
  <!-- === CARRITO VAC√çO === -->
  <div class="cart-page">
    <div class="empty-cart">
      <div class="empty-icon">üõí</div>
      <h1 class="empty-title">Tu carrito est√° vac√≠o</h1>
      <p class="empty-text">¬°Descubre nuestros incre√≠bles juguetes y comienza a llenar tu carrito!</p>
      <a href="/collections/all" class="btn-checkout" style="display: inline-block; text-decoration: none;">
        Explorar productos üéÅ
      </a>
    </div>
  </div>
{% endif %}

<script>
  // Actualizar cantidad
  function updateQuantity(line, change) {
    const input = document.querySelector(`input[data-line="${line}"]`);
    let newQty = parseInt(input.value) + change;
    if (newQty < 0) newQty = 0;
    input.value = newQty;
    updateCart();
  }

  // Actualizar carrito
  function updateCart() {
    const form = document.getElementById('cart-form');
    const formData = new FormData(form);
    
    fetch('/cart/update.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(cart => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error al actualizar el carrito');
    });
  }

  // Eliminar producto
  function removeItem(line) {
    if (confirm('¬øEliminar este producto del carrito?')) {
      fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          line: line,
          quantity: 0
        })
      })
      .then(response => response.json())
      .then(cart => {
        window.location.reload();
      });
    }
  }

  // Toggle descuento
  function toggleDiscount() {
    document.getElementById('discount-form').classList.toggle('active');
  }

  // Aplicar descuento
  function applyDiscount() {
    const code = document.getElementById('discount-code').value.trim().toUpperCase();
    if (!code) {
      alert('Por favor, introduce un c√≥digo de descuento');
      return;
    }
    
    // Redirigir a checkout con el c√≥digo
    window.location.href = `/checkout?discount=${code}`;
  }

  // Ir a checkout
  function goToCheckout() {
    window.location.href = '/checkout';
  }
</script>