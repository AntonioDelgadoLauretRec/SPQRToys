  }

  .summary-label {
    color: #666;
  }

  .summary-value {
    font-weight: 700;
    color: #002C54;
  }

  .summary-divider {
    height: 2px;
    background: #f0f0f0;
    margin: 20px 0;
  }

  .summary-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    border-top: 3px solid #002C54;
    border-bottom: 3px solid #002C54;
    margin: 20px 0;
  }

  .total-label {
    font-size: 1.3rem;
    font-weight: 700;
    color: #002C54;
  }

  .total-price {
    font-size: 2.5rem;
    font-weight: 800;
