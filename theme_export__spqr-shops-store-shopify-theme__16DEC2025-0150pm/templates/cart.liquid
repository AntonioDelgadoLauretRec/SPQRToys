    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .cart-item {
    display: grid;
    grid-template-columns: 120px 1fr auto;
    gap: 25px;
    padding: 25px 0;
    border-bottom: 2px solid #f0f0f0;
    align-items: center;
  }

  .cart-item:first-child {
    padding-top: 0;
  }

  .cart-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .item-image {
    border-radius: 12px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .item-image img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    display: block;
  }

  .item-details {
