    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
  }

  .item-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 15px;
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
  }

  .qty-btn {
    width: 40px;
    height: 40px;
    border: none;
    background: white;
    cursor: pointer;
    font-size: 1.2rem;
    font-weight: 700;
    color: #002C54;
    transition: background 0.2s ease;
  }

  .qty-btn:hover {
    background: #f0f0f0;
  }

  .qty-input {
    width: 50px;
    height: 40px;
    border: none;
    text-align: center;
    font-weight: 700;
    font-size: 1rem;
    color: #002C54;
  }

  .qty-input:focus {
    outline: none;
  }

  .item-subtotal {
    font-size: 1.5rem;
    font-weight: 800;
    color: #002C54;
  }

  .btn-remove {
    background: none;
    border: none;
    color: #850101;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: underline;
    padding: 5px;
    transition: opacity 0.2s ease;
  }

  .btn-remove:hover {
    opacity: 0.7;
  }

  /* === RESUMEN DEL PEDIDO === */
  .cart-summary {
    position: sticky;
    top: 120px;
  }

  .summary-card {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .summary-title {
    font-family: 'Playfair Display';
    font-size: 1.8rem;
