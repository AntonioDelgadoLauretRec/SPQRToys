    }

    .footer-column ul li {
      margin-bottom: 12px;
    }

    .footer-column ul a {
      color: rgba(255, 255, 255, 0.8);
      transition: var(--transition);
    }

    .footer-column ul a:hover {
      color: var(--color-accent);
      padding-left: 8px;
    }

    .footer-bottom {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 30px;
      text-align: center;
    }

    .footer-logo {
      margin-bottom: 20px;
    }

    .footer-logo img {
      max-width: 150px;
      margin: 0 auto;
      opacity: 0.9;
    }

    .footer-bottom p {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
    }

    /* === MEJORAS PROFESIONALES === */
    .product-card,
    .cart-items,
    .summary-card,
    .filter-section {
      box-shadow: 0 2px 8px rgba(0,0,0,0.06) !important;
      border: 1px solid rgba(0,0,0,0.06);
    }

    .product-card:hover {
      box-shadow: 0 8px 20px rgba(0,0,0,0.12) !important;
    }

    section {
      padding: 60px 0;
    }

    /* === RESPONSIVE === */
    @media (max-width: 768px) {
      .announcement-bar {
        font-size: 0.8rem;
